                                                        <a href="/Customer/ViewCustomer/@Global.EncodeParameters(cstViewParam)"
                                                           title="View Customer"
                                                           style="color: blue; text-decoration: none; cursor: pointer; font-size: 1.5em;"><i class="fa fa-eye fa-1x"></i>&nbsp;</a>
