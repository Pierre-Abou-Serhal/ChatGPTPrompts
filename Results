 public void SyncDictionaryBulk(List<Dictionary> dictionaryList, string user)
        {
            const int chunkSize = 2000;

            foreach (var chunk in dictionaryList.Chunk(chunkSize))
            {
                var parameters = new DynamicParameters();

                parameters.Add("P__Dictionary",
                    GetDictionaryDt(chunk).AsTableValuedParameter());

                parameters.Add("P__User", user);

                _dapperAccess.Execute("usp_Sync_Dictionary_Bulk", parameters);
            }
        }
