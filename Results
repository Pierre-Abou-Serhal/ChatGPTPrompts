const crypto = require('crypto');

function stringSha(password, hashAlgorithm) {
  if (hashAlgorithm.toUpperCase() === 'SHA256') {
    const hash = crypto.createHash('sha256');
    hash.update(password, 'utf8');
    return hash.digest('hex'); // Equivalent of GetStringFromHash
  }
  return null;
}

// Example usage:
const hashed = stringSha('myPassword123', 'SHA256');
console.log('SHA256 Hash:', hashed);